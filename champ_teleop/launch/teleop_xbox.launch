<launch>
    <arg name="joy"  default="xbox"/>
    <arg name="dev"  default="/dev/input/js0"/>

    <node if="$(eval arg('joy')=='f710' or arg('joy')=='ps4' or arg('joy')=='xbox')" name="joy" pkg="joy" type="joy_node" required="true">
        <param name="autorepeat_rate" value="50" />
        <param name="dev" value="$(arg dev)" />
        <param name="deadzone" value="0.2" />
    </node>

    <node name="champ_teleop" pkg="champ_teleop" type="champ_teleop.py" output="screen" required="true">
        <param name="joy" value="$(arg joy)" />
        <param name="speed" value="0.5" />
        <param name="turn" value="0.5" />
    </node>

    <node name="vel_pose_smoother" pkg="champ_teleop" type="vel_pose_smoother.py" output="screen" required="true"/>

</launch>